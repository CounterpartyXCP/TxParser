{
  "name": "@counterpartyxcp/txparser",
  "version": "1.0.0",
  "description": "Counterparty protocol transaction parser for Bitcoin OP_RETURN and Taproot reveal formats",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "npm run build && npx simple-git-hooks",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "counterparty",
    "bitcoin",
    "xcp",
    "transaction",
    "parser",
    "taproot",
    "op-return"
  ],
  "author": "CounterpartyXCP",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/CounterpartyXCP/TxParser.git"
  },
  "bugs": {
    "url": "https://github.com/CounterpartyXCP/TxParser/issues"
  },
  "homepage": "https://github.com/CounterpartyXCP/TxParser#readme",
  "peerDependencies": {
    "bitcoinjs-lib": "^7.0.0-rc.0"
  },
  "dependencies": {
    "cbor-x": "^1.6.0"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@vitest/coverage-v8": "^4.0.5",
    "bitcoinjs-lib": "^7.0.0-rc.0",
    "simple-git-hooks": "^2.10.0",
    "prettier": "^3.3.3",
    "typescript": "^5",
    "vitest": "^4.0.5"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "simple-git-hooks": {
    "pre-push": "npm run format:check"
  }
}
